{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "es6",
		"allowJs": true,
		"jsx": "preserve",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["dom", "es5", "scripthost", "es2015"]
	},
	"include": ["**/*.ts"]
}
